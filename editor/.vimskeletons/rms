/* some const definitions */
#const DLC_FALCON   1056
#const DEADTREE     404
#const DEADTREE2    407
#const GRASS_CLIFFS 16

<PLAYER_SETUP>          /* basic setup */
random_placement

<LAND_GENERATION>       /* main lands and seas */
base_terrain GRASS

create_player_lands {
  terrain_type GRASS
  land_percent 100
  base_size 10
  left_border   0
  right_border  0
  top_border    0
  bottom_border 0
  border_fuzziness 20
  clumping_factor 20
}

<ELEVATION_GENERATION>  /* hills */
/* arabia elevation settings */
if TINY_MAP
  create_elevation 4 {
    base_terrain GRASS /* change this to match base_terrain of map */
    number_of_clumps 10
    number_of_tiles 2000
    set_scale_by_groups
    set_scale_by_size
  }
else
  create_elevation 7 {
    base_terrain GRASS /* change this to match base_terrain of map */
    number_of_clumps 15
    number_of_tiles 3000
    set_scale_by_groups
    set_scale_by_size
  }
endif

/* remove to spawn no cliffs */
<CLIFF_GENERATION>      /* cliffs */

<TERRAIN_GENERATION>    /* terrain patches */
/* replace cliff grass with desired terrain */
create_terrain GRASS {
  base_terrain GRASS_CLIFFS
  land_percent 100
  number_of_clumps 99999
  spacing_to_other_terrain_types 0
}
/* arabia forest settings */
/* FOREST / BAMBOO / JUNGLE
   PINE_FORST / PALM_DESERT
   SNOW_FOREST / DLC_DRAGONFOREST
   DLC_BAOBAFOREST / DLC_ACACIAFOREST
   DLC_MANGROVEFOREST */
create_terrain FOREST {
  base_terrain GRASS /* change to base terrain of the map */
  land_percent 12
  number_of_clumps 10
  set_scale_by_groups
  set_avoid_player_start_areas
  spacing_to_other_terrain_types 5
}
create_terrain FOREST {
  base_terrain GRASS /* change to base terrain of the map */
  land_percent 1
  number_of_clumps 3
  set_scale_by_groups
  set_avoid_player_start_areas
  spacing_to_other_terrain_types 3
}

